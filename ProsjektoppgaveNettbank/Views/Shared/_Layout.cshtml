<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HiOA Holdings</title>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/custom.js"></script>s
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/jquery-ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />


    
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand"><img src="~/Content/images/logo.png" width="50" height="60"></a>
                @Html.ActionLink("Hioa Holdings, HH™", "BankIndex", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @if ((bool)Session["LoggedIn"] != true)
                    {
                        @Html.ActionLink("Admin Login", "AdminLogin", new { area = "" }, new { @class = "navbar-brand" })
                    }
                     @if ((bool)Session["LoggedIn"])
                    {

                        <li>@Html.ActionLink("Account Overview", "AccountOverview", new { tom = "" }, new { @class = "navbar-brand" })</li>
                        <li>@Html.ActionLink("Log Out", "LogOut", new { tom = "" }, new { @class = "navbar-brand" })</li>
                     }
                     else
                     {

                        @Html.ActionLink("Log in", "CustomerLogin", new { area = "" }, new { @class = "navbar-brand" })
<!--
                         <li class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><strong>Log in</strong> <span class="caret"></span></a>
                            <div class="dropdown-menu" role="menu">
                                
                            </div>
                                
                        </li>
-->

                    }

                </ul>
            </div>
        </div>
    </div>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - HiOA Holdings</p>
        </footer>
    </div>


</body>
</html>